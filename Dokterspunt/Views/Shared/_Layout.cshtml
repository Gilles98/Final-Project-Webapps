<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dokterspunt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/ownstyle.css" />
    <link rel="stylesheet" href="~/slick/slick.css" />
    <link rel="stylesheet" href="~/slick/slick-theme.css" />
</head>

<body>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/slick/slick.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $(".slick-slider").slick({
                dots: true,
                arrows: false,
                speed: 1000,
                slidesToShow: 1,
                draggable: false,
            });

        })
    </script>


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand resizeBrand" asp-area="" asp-controller="Home" asp-action="Index">Dokterspunt</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item resizeItem">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin - Functies</a>
                            </li>
                        }
                        <li class="nav-item resizeItem">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Teams">Teams</a>
                        </li>

                        <li class="nav-item resizeItem">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Corona_Maatregelen">Corona - Maatregelen</a>
                        </li>

                        <li class="nav-item resizeItem">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Locatie">Locatie</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Dokterspunt - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
