@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12 loginRegister">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="padding:5%">
            <h2>Maak een nieuw account.</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.Voornaam">Voornaam</label>
                    <input asp-for="Input.Voornaam" class="form-control"
                           placeholder="Uw voornaam">
                    <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.Achternaam">Achternaam</label>
                    <input asp-for="Input.Achternaam" class="form-control"
                           placeholder="Uw achternaam">
                    <span asp-validation-for="Input.Achternaam" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Wachtwoord" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Wachtwoord herhalen" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for=Input.Gemeente>Gemeente</label>
                    <input asp-for="Input.Gemeente" class="form-control" 
                           placeholder="Gemeente" />
                    <span asp-validation-for="Input.Gemeente" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.Straat">Straat</label>
                    <input asp-for="Input.Straat" class="form-control"
                           placeholder="Straat" />
                    <span asp-validation-for="Input.Straat" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.Huisnummer">Huisnummer</label>
                    <input asp-for="Input.Huisnummer" class="form-control" 
                           placeholder="Huisnummer" />
                    <span asp-validation-for="Input.Huisnummer" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Input.Postcode">Postcode</label>
                    <input asp-for="Input.Postcode" type="number" class="form-control">
                     <span asp-validation-for="Input.Postcode" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary form-control">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
